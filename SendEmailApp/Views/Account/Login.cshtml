@model SendEmailApp.Models.ViewModel.LoginModel
@{
    Layout = null;
}
@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<h1 style="text-align:center">Login</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="col-4 form-group" style="margin:auto">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="col-4 form-group" style="margin:auto">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="col-4 form-group" style="margin:1em auto">
        <input type="submit" class="btn btn-primary" value="Login" />
        <a asp-controller="Account" asp-action="Register" class="btn btn-danger">Register</a>
    </div>
</form>


@section Scripts{
    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.min.js"></script>
}
