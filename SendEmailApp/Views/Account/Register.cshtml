@model SendEmailApp.Models.ViewModel.RegisterModel
@{
    Layout = null;
}
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />

<h1 style="text-align:center">Register</h1>

<form asp-action="Register" asp-controller="Account" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="col-4 form-group" style="margin:auto">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="col-4 form-group" style="margin:auto">
        <label asp-for="Surname"></label>
        <input asp-for="Surname" class="form-control" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>
    <div class="col-4 form-group" style="margin:auto">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="col-4 form-group" style="margin:auto">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="col-4 form-group" style="margin:auto">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="col-4 form-group" style="margin:1em auto">
        <a asp-action="Login" asp-controller="Account" class="btn btn-outline-info">Back to Login Page</a>
        <input type="submit" class="btn btn-success" value="Register" />
    </div>
</form>

@section Scripts{
    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.min.js"></script>
}